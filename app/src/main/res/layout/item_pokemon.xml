<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPokemonItem"
        style="@style/ItemCard"
        tools:cardBackgroundColor="#C4E3D4">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPokemonItem"
                style="@style/ItemCardImage"
                android:contentDescription="@string/cd_card_item_image"
                tools:srcCompat="@tools:sample/avatars" />

            <Space style="@style/DefaultSpacer" />

            <TextView
                android:id="@+id/tvNamePokemonItem"
                style="@style/ItemCardHeader"
                tools:text="Bulbasaurs" />

            <TextView
                android:id="@+id/tvNumberPokemonItem"
                style="@style/ItemCardSubHeader"
                tools:text="001" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
