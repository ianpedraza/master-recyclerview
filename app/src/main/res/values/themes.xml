<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasterRecylerView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionModeStyle">@style/Theme.MasterRecylerView.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionModeCloseButtonStyle">
            @style/Theme.MasterRecylerView.ActionMode.CloseButtonStyle
        </item>
        <item name="itemBackground">@color/white</item>
        <item name="actionBarStyle">@style/Theme.MasterRecylerView.ActionBar</item>
    </style>

    <style name="Theme.MasterRecylerView.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?colorPrimaryVariant</item>
    </style>

    <style name="Theme.MasterRecylerView.ActionMode.CloseButtonStyle" parent="Widget.AppCompat.ActionMode">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.MasterRecylerView.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?colorPrimary</item>
    </style>

    <style name="DefaultSpacer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dime_size_20dp</item>
    </style>

    <style name="ItemCard">
        <item name="android:layout_width">@dimen/card_size_160dp</item>
        <item name="android:layout_height">@dimen/card_size_220dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius_12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ItemCardImage">
        <item name="android:layout_width">@dimen/dime_size_120dp</item>
        <item name="android:layout_height">@dimen/dime_size_120dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemCardHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemCardSubHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <dimen name="text_size_18sp">18sp</dimen>
    <dimen name="text_size_16sp">16sp</dimen>
    <dimen name="dime_size_120dp">120dp</dimen>

    <dimen name="card_size_160dp">160dp</dimen>
    <dimen name="card_size_220dp">220dp</dimen>
    <dimen name="corner_radius_12dp">12dp</dimen>
    <dimen name="dime_size_20dp">20dp</dimen>
</resources>
